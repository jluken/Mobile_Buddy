<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cse5236.mobilebuddy.Draw"
    tools:showIn="@layout/activity_draw">


    <com.example.cse5236.mobilebuddy.DrawCanvas
        android:id="@+id/signature_canvas"
        android:layout_width="350dp"

        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/rectangle_at_the_top"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/signature_canvas"
        android:background="#000000"
        android:visibility="visible" />


    <Button
        android:id="@+id/DrawButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:text="Submit" />

    <ImageView
        android:id="@+id/drawBuddy"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/buddydraw" />

</RelativeLayout>
